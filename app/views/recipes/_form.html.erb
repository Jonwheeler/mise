<%= simple_form_for(@recipe) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :canonical_url, label: "URL" %>
    <hr>
    <% if @recipe.new_record? %> 
      <p><a href="#form-details" data-toggle="collapse">Or enter manually</a></p>
    <% end %>
    <div id="form-details" class="<%= "hide" if @recipe.new_record? %>">
      <%= f.input :name %>
      <%= f.input :description, input_html: {rows: 10} %>
      <%= f.input :ingredients, input_html: {rows: 20} %>
      <%= f.input :instructions, input_html: {rows: 20} %>
      <%= f.input :cook_time %>    
      <%= f.input :author %>    
      <%= f.input :prep_time %>
      <%= f.input :total_time %>
      <%= f.input :yield %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
